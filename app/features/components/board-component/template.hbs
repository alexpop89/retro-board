{{yield}}
<div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">{{board.title}}</h2>
  </div>

  <div class="mdl-card__actions mdl-card--border">
    {{#link-to "board" board.titleURL board.id class="mdl-button mdl-button--colored mdl-button--secondary mdl-js-button mdl-js-ripple-effect"}}
      Open
    {{/link-to}}
  </div>
</div>
